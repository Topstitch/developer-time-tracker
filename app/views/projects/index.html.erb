<h2>Projects</h2>

<p><%= link_to 'New Project', new_project_path, id: "new-proj-link" %></p>

<table class = "table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Max Hours Allowed</th>
      <th>Total Hours Worked</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr class="<%= "warning" if project.maxed_out_time_budget? %>">
        <td><%= project.name %></td>
        <td><%= project.max_hours %></td>
        <td><%= project.total_hours %></td>

        <td class = "text-center"><%= link_to 'Edit', edit_project_path(project) %></td>
        <td class = "text-center"><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
