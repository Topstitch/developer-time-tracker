<%= form_for(@time_entry) do |f| %>
  <% if @time_entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@time_entry.errors.count, "error") %> prohibited this time_entry from being saved:</h2>

      <ul>
      <% @time_entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :duration %><br>
    <%= f.number_field :duration %>
  </div>
  <div class="form-group">
    <%= f.label :worked_on %><br>
    <%= f.date_field :worked_on %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :developer_id, :value => current_user.id %>
  </div>
  <div class="form-group">
    <%= f.label :project_id %><br>
    <%= f.collection_select :project_id, Project.all, :id, :name, {:include_blank => ""} %>
  </div>

  <div class="form-group">
    <%= f.submit "Save Time Entry", class: "btn btn-default"%>
  </div>
<% end %>
