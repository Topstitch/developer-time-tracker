<h2>Developers</h2>

<p><%= link_to 'New Developer', new_developer_path, id: "new-dev-link" %></p>

<table class = "table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Hours Worked This Week</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @developers.each do |developer| %>
      <tr class="<%= "warning" if developer.overtime? %>">
        <td><%= developer.name %></td>
        <td><%= developer.email %></td>
        <td><%= developer.total_hours %></td>

        <td class = "text-center"><%= link_to 'Edit', edit_developer_path(developer) %></td>
        <td class = "text-center"><%= link_to 'Delete', developer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
